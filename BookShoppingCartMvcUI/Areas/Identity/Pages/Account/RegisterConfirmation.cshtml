@page
@model RegisterConfirmationModel
@{
    ViewData["Title"] = "Potwierdzenie rejestracji";
}

<h1>@ViewData["Title"]</h1>
@{
    if (@Model.DisplayConfirmAccountLink)
    {
<p>
    <a id="confirm-link" href="@Model.EmailConfirmationUrl">Kliknij tutaj by powtiedzić konto</a>
</p>
    }
    else
    {
<p>
        Aplikacja nie wysyła na prawdę maila kliknij link by potwierdzić.
</p>
    }
}

